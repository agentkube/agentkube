{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Agentkube",
  "version": "0.1.0",
  "identifier": "platform.agentkube.app",
  "mainBinaryName": "agentkube",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5422",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Agentkube",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "hiddenTitle": true,
        "shadow": true,
        "titleBarStyle": "Overlay"
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": {
          "allow": ["**/*"],
					"requireLiteralLeadingDot": false
        },
        "enable": true
      },
      "capabilities": [
        {
          "identifier": "http:default",
          "description": "Allows making HTTP requests to specific domains",
          "windows": ["main"],
          "permissions": [
            {
              "identifier": "http:default",
              "allow": [
                "http://localhost:1420/*",
                "http://localhost:4688/*",
                "http://localhost:65001/*"
              ]
            }
          ]
        },
        {
          "identifier": "cors-fetch:default",
          "description": "Allows CORS fetch requests",
          "windows": ["main"],
          "permissions": [
            {
              "identifier": "cors-fetch:default",
              "allow": ["http://localhost:1420/*", "http://localhost:4688/*", "http://localhost:65001/*"]
            }
          ]
        },
        {
           "identifier": "core:window:default",
           "local": true,
           "windows": ["main"],
            "permissions": [
              "core:webview:default",
              "core:window:default",
              "core:window:allow-minimize",
              "core:window:allow-maximize",
              "core:window:allow-toggle-maximize",
              "core:window:allow-internal-toggle-maximize",
              "core:window:allow-close",
              "core:window:allow-set-size",
              "core:window:allow-start-dragging"
            ]
        },
        {
          "identifier": "core:event:default",
          "local": true,
          "windows": ["main"],
           "permissions": [
             "core:event:default",
             "core:event:allow-listen"
           ]
        },
        {
          "identifier": "autostart:default",
          "local": true,
          "windows": ["main"],
           "permissions": [
              "autostart:default",
              "autostart:allow-enable",
              "autostart:allow-disable",
              "autostart:allow-is-enabled"
           ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [],
    "externalBin": ["bin/operator/operator", "bin/orchestrator/orchestrator"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Agentkube, Inc.",
    "homepage": "https://agentkube.com",
    "copyright": "Â© 2025 Agentkube, Inc. All rights reserved.",
    "license": "MIT",
    "category": "Productivity",
    "shortDescription": "Agentkube: AI-powered Kubernetes management platform.",
    "longDescription": "Agentkube: AI-powered Kubernetes management platform"
  },
  "plugins": {}
}