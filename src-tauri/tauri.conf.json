{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Agentkube",
  "version": "0.0.12",
  "identifier": "platform.agentkube.app",
  "mainBinaryName": "agentkube",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5422",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Agentkube",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "hiddenTitle": true,
        "shadow": true,
        "titleBarStyle": "Overlay",
        "dragDropEnabled": true,
        "visible": false
      },
      {
        "label": "splashscreen",
        "url": "splashscreen.html",
        "width": 600,
        "height": 360,
        "decorations": false,
        "center": true,
        "resizable": false,
        "fullscreen": false,
        "visible": true,
        "alwaysOnTop": true,
        "skipTaskbar": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": {
          "allow": [
            "**/*"
          ],
          "requireLiteralLeadingDot": false
        },
        "enable": true
      },
      "capabilities": [
        {
          "identifier": "core:app:default",
          "description": "Allows making HTTP requests to specific domains",
          "windows": [
            "main"
          ],
          "permissions": [
            "core:app:default",
            "core:app:allow-version"
          ]
        },
        {
          "identifier": "http:default",
          "description": "Allows making HTTP requests to specific domains",
          "windows": [
            "main",
            "splashscreen"
          ],
          "permissions": [
            {
              "identifier": "http:default",
              "allow": [
                "http://localhost:1420/*",
                "http://localhost:4688/*",
                "http://localhost:4689/*"
              ]
            }
          ]
        },
        {
          "identifier": "cors-fetch:default",
          "description": "Allows CORS fetch requests",
          "windows": [
            "main",
            "splashscreen"
          ],
          "permissions": [
            {
              "identifier": "cors-fetch:default",
              "allow": [
                "http://localhost:1420/*",
                "http://localhost:4688/*",
                "http://localhost:4689/*"
              ]
            }
          ]
        },
        {
          "identifier": "core:window:default",
          "local": true,
          "windows": [
            "main"
          ],
          "permissions": [
            "core:webview:default",
            "core:window:default",
            "core:window:allow-minimize",
            "core:window:allow-maximize",
            "core:window:allow-toggle-maximize",
            "core:window:allow-internal-toggle-maximize",
            "core:window:allow-close",
            "core:window:allow-set-size",
            "core:window:allow-start-dragging"
          ]
        },
        {
          "identifier": "core:event:default",
          "local": true,
          "windows": [
            "main"
          ],
          "permissions": [
            "core:event:default",
            "core:event:allow-listen"
          ]
        },
        {
          "identifier": "autostart:default",
          "local": true,
          "windows": [
            "main"
          ],
          "permissions": [
            "autostart:default",
            "autostart:allow-enable",
            "autostart:allow-disable",
            "autostart:allow-is-enabled"
          ]
        },
        {
          "identifier": "process:default",
          "local": true,
          "windows": [
            "main"
          ],
          "permissions": [
            "process:default",
            "process:allow-exit",
            "process:allow-restart"
          ]
        },
        {
          "identifier": "updater:default",
          "local": true,
          "windows": [
            "main"
          ],
          "permissions": [
            "updater:default",
            "updater:allow-download",
            "updater:allow-download-and-install",
            "updater:allow-check"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "macOS": {
      "dmg": {
        "background": "images/background.png"
      },
      "files": {},
      "hardenedRuntime": false,
      "minimumSystemVersion": "10.13"
    },
    "resources": [
      "bin/operator/agentkube-operator-*",
      "bin/orchestrator/agentkube-orchestrator-*"
    ],
    "externalBin": [],
    "icon": [
      "icons/16x16.png",
      "icons/32x32.png",
      "icons/48x48.png",
      "icons/64x64.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/256x256.png",
      "icons/512x512.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Agentkube, Inc.",
    "homepage": "https://agentkube.com",
    "copyright": "Â© 2025 Agentkube, Inc. All rights reserved.",
    "license": "MIT",
    "category": "Productivity",
    "shortDescription": "Agentkube: AI-powered Kubernetes management platform.",
    "longDescription": "Agentkube: AI-powered Kubernetes management platform"
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "agentkube"
        ],
        "name": "AgentKube Protocol",
        "role": "Editor"
      }
    },
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDlBNTk0MjQxMTU1MkQ5QzUKUldURjJWSVZRVUpabXUycWVFNHN2NER6TStwZ1dpK2ZMR1p0NjNoT0NqbkxNUXhlVU9MbnJoZnAK",
      "endpoints": [
        "https://raw.githubusercontent.com/agentkube/agentkube/release/download/agentkube-latest.json"
      ]
    }
  }
}